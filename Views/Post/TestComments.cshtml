@model List<HtmxDashboard.Models.Comment>

<div class="container">
    <h2>Debug: Comments for Post @ViewBag.PostId</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h4>Rendered Comments (@(Model?.Count ?? 0))</h4>
            @await Html.PartialAsync("_Comments", Model)
        </div>
        
        <div class="col-md-6">
            <h4>Raw JSON Response</h4>
            <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; max-height: 500px; overflow-y: auto;">@ViewBag.CommentsJson</pre>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="/" class="btn btn-primary">Back to Dashboard</a>
        <a href="/Post/TestComments/2" class="btn btn-secondary">Test Post 2</a>
        <a href="/Post/TestComments/3" class="btn btn-secondary">Test Post 3</a>
    </div>
</div>