@model List<HtmxDashboard.Models.Comment>

<div class="border-t border-gray-200 dark:border-gray-700 pt-4">
    <h6 class="text-base font-medium text-gray-900 dark:text-white mb-3">Comments (@(Model?.Count ?? 0))</h6>
    @if (Model != null && Model.Any())
    {
        @foreach (var comment in Model)
        {
            <div class="mb-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <p class="font-semibold text-gray-900 dark:text-white">@comment.Name</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">@comment.Email</p>
                <p class="mt-2 text-gray-700 dark:text-gray-300">@comment.Body</p>
            </div>
        }
    }
    else
    {
        <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-md p-4">
            <p class="text-sm text-blue-800 dark:text-blue-300">No comments available for this post.</p>
        </div>
    }
</div>