@model List<HtmxDashboard.Models.User>

<div class="space-y-3">
    @foreach (var user in Model)
    {
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
            <h6 class="font-semibold text-gray-900 dark:text-white mb-1">@user.Name</h6>
            <div class="text-sm space-y-1">
                <p class="text-gray-600 dark:text-gray-400">@@@user.Username</p>
                <p class="text-indigo-600 dark:text-indigo-400">@user.Email</p>
                @if (user.Company != null)
                {
                    <p class="text-green-600 dark:text-green-400">@user.Company.Name</p>
                }
            </div>
        </div>
    }
</div>